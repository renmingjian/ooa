<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.OneStop" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="TransparentActivity" parent="Base.Theme.OneStop">
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景透明 -->
        <item name="android:colorBackgroundCacheHint">@null</item> <!-- 优化背景缓存 -->
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="OSPHeadingFont">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sharpsans_medium</item>
    </style>

    <style name="OSPSubtitleFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/sharpsans_medium</item>
    </style>

    <style name="OSPContentFont">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/sharpsans_medium</item>
    </style>

    <style name="OSPSmallFont">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/sharpsans_medium</item>
    </style>

    <style name="OSPButtonFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sharpsans_medium</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>